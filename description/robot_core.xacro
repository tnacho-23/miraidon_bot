<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- Materials -->

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="purple">
        <color rgba="0.8 0.1 0.8 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
        
    </link>

    <!-- Chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.15 0.0 0.0"/>
    </joint>
    
    <link name="chassis">
        <visual>
        <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
            <material name="purple"/>
        </visual>
        <collision>
        <origin xyz="0.15 0.0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
             <origin xyz="0.15 0.0 0.075" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material> Gazebo/Purple</material>
    </gazebo>

    <!-- Left Wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="0.0 0.175 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0.0 0.0 1.0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual> 
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>      
    </link>

    <gazebo reference="left_wheel">
        <material> Gazebo/Black</material>
    </gazebo>

    <!-- Rigth Wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="0.0 -0.175 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0.0 0.0 -1.0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
            <material name="black"/>
        </visual> 
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>     
    </link>

    <gazebo reference="right_wheel">
        <material> Gazebo/Black</material>
    </gazebo>

    <!-- Caster Wheel 1-->

    <joint name="caster_wheel_1_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_1"/>
        <origin xyz="0.24 0.1 0.0"/>
    </joint>

    <link name="caster_wheel_1">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_1">
        <material> Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

     <!-- Caster Wheel 2-->

    <joint name="caster_wheel_2_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_2"/>
        <origin xyz="0.06 0.1 0.0"/>
    </joint>

    <link name="caster_wheel_2">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_2">
        <material> Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- Caster Wheel 3-->

    <joint name="caster_wheel_3_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_3"/>
        <origin xyz="0.06 -0.1 0.0"/>
    </joint>

    <link name="caster_wheel_3">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_3">
        <material> Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- Caster Wheel 4-->

    <joint name="caster_wheel_4_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel_4"/>
        <origin xyz="0.24 -0.1 0.0"/>
    </joint>

    <link name="caster_wheel_4">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.01" radius="0.05">
             <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel_4">
        <material> Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>
</robot>